# ============================================================================
# Quarkus Backend Environment Variables
# ============================================================================
# Copy this file to .env and fill in the required values
# Note: .env files are typically not committed to version control

# --- HTTP Configuration ---
# Port for the Quarkus application (default: 8080)
QUARKUS_HTTP_PORT=8080

# --- Database Configuration ---
# PostgreSQL connection details
QUARKUS_DATASOURCE_JDBC_URL=jdbc:postgresql://localhost:5432/quarkusdb
QUARKUS_DATASOURCE_USERNAME=quarkus
QUARKUS_DATASOURCE_PASSWORD=quarkus
QUARKUS_DATASOURCE_JDBC_MAX_SIZE=20

# --- Keycloak / OIDC Configuration ---
# Keycloak server URL with realm
# For development with docker-compose: http://localhost:8180/realms/tid-issuer
# For production: https://your-keycloak-server.com/realms/your-realm
QUARKUS_OIDC_AUTH_SERVER_URL=http://localhost:8180/realms/tid-issuer

# OIDC Client credentials
# IMPORTANT: These must match the client configuration in Keycloak
# quarkus-api is the client where roles (Employee, Representative) are defined
QUARKUS_OIDC_CLIENT_ID=quarkus-api
# NOTE: quarkus-api is configured as a PUBLIC client in Keycloak (publicClient: true).
# Public clients used for bearer token validation do not require a client secret.
# The backend only validates tokens issued by Keycloak; it does not perform
# client credential flows that would require a secret.
QUARKUS_OIDC_CREDENTIALS_SECRET=

# TLS verification for Keycloak (use 'none' for dev, 'required' for prod)
KEYCLOAK_TLS_VERIFY=none

# --- MinIO / Object Storage Configuration ---
# MinIO endpoint and credentials used for article uploads
MINIO_URL=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=articles-of-association

# --- CORS Configuration ---
# Comma-separated list of allowed origins
# For development: http://localhost:5173
# For production: https://your-frontend-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:5173

# --- Logging Configuration ---
# Enable SQL logging (true/false)
QUARKUS_LOG_SQL=false

# Enable file logging (true/false)
QUARKUS_LOG_FILE_ENABLE=false
QUARKUS_LOG_FILE_PATH=/var/log/tid-issuer/application.log
