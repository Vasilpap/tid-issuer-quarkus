# --- Database (via Compose; host-mapped port) ---
QUARKUS_DATASOURCE_JDBC_URL=jdbc:postgresql://localhost:5432/tid
QUARKUS_DATASOURCE_USERNAME=tid
QUARKUS_DATASOURCE_PASSWORD=tid

# --- Keycloak (via Compose; host-mapped port) ---
# If you only validate JWT bearer tokens, client-id/secret can be left empty.
QUARKUS_OIDC_AUTH_SERVER_URL=http://localhost:8180/realms/tid
QUARKUS_OIDC_CLIENT_ID=
QUARKUS_OIDC_CREDENTIALS_SECRET=

# --- HTTP / CORS (Vue dev server) ---
QUARKUS_HTTP_PORT=8080
CORS_ALLOWED_ORIGINS=http://localhost:5173

# --- Mail (optional; Mailhog via Compose) ---
QUARKUS_MAILER_HOST=localhost
QUARKUS_MAILER_PORT=1025
QUARKUS_MAILER_FROM=noreply@dev.local
